#!/bin/bash

# kurbeScript - Start Kubernetes cluster and verify status

echo "🚀 Starting Minikube Kubernetes cluster..."
minikube start

if [ $? -ne 0 ]; then
    echo "❌ Failed to start Minikube. Please check installation."
    exit 1
fi

echo "✅ Kubernetes cluster started."

echo "🔍 Verifying cluster info..."
kubectl cluster-info

echo "📋 Retrieving available pods in all namespaces..."
kubectl get pods --all-namespaces

